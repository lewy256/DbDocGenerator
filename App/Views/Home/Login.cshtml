@model DbDocGenerator.Models.Login
<div class="modal modal-signin position-static d-block py-5" tabindex="-1" role="dialog" id="modalSignin">
    <div class="modal-dialog" role="document">
      <div class="modal-content rounded-5 shadow">
        <div class="modal-header p-5 pb-4 border-bottom-0">
          <h2 class="fw-bold mb-0">Connect to database</h2>
        </div>
        <div class="modal-body p-5 pt-0">
          <form asp-controller="Login" asp-action="Edit" method="post">
            <div class="form-floating mb-3">
              <input type="text" class="form-control rounded-4" id="floatingInput" placeholder="name@example.com" asp-for="ServerName" value="172.17.0.1,1582">
              <label for="floatingInput">Server name</label>
            </div>
            <div class="form-floating mb-3">
              <input type="text" class="form-control rounded-4" placeholder="Password" asp-for="DatabaseName" value="master">
              <label for="floatingPassword">Database name</label>
            </div> 
            <div class="form-floating mb-3">
              <input type="text" class="form-control rounded-4" id="floatingPassword" placeholder="Password" asp-for="UserName" value="sa">
              <label for="floatingPassword">Login</label>
            </div>    
             <div class="form-floating mb-3">
                <input type="password" class="form-control rounded-4" id="floatingPassword" placeholder="Password" asp-for="Password" value="Passw0rd">
                <label for="floatingPassword">Password</label>
             </div>
            <button class="w-100 mb-2 btn btn-lg rounded-4 btn-primary" type="submit" asp-controller="Home" asp-action="Login">Connect</button>
          </form>    
        </div>
      </div>
    </div>
  </div>
  